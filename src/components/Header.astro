---
import HeaderLink from './HeaderLink.astro'
import { SITE_TITLE } from '../config'
---

<header>
	<div class="upper-navbar container">
		<HeaderLink href="/">
			<img src="/images/escut_casb.png" alt="Imatge de l'escut del Creu Alta Sabadell Bàsquet" class="escut">
		</HeaderLink>
		<div class="header-nav">
			<nav>
				<HeaderLink href="/">
					<img src="/images/home.svg" alt="Home logo" width="32">
				</HeaderLink>
				<HeaderLink href="/onsom" title="On Som?">
					<img src="/images/location.svg" alt="Location logo" width="32">
				</HeaderLink>
				<HeaderLink href="https://twitter.com/CreuAltaBasquet" target="_blank" title="Twitter">
					<img src="/images/twitter.svg" alt="Twitter logo" width="40">
				</HeaderLink>
				<HeaderLink href="https://www.instagram.com/creualtabasquet" target="_blank" title="Instagram">
					<img src="/images/instagram.svg" alt="Instagram logo" width="32">
				</HeaderLink>		
				<HeaderLink href="/noticies">Notícies</HeaderLink>
				<HeaderLink href="/historia">Historia</HeaderLink>
			</nav>
			
			<HeaderLink href="/">
				<h1>{SITE_TITLE}</h1>
			</HeaderLink>
		</div>
	</div>
</header>

<style lang="scss">
header {
	background: var(--color-bg);
	width: 100%;
	padding: 2rem 0rem 0rem;
	margin: 0;
}
.upper-navbar {
	display: flex;
	flex-direction: row;
	.escut {
		width: 95px;
		height: 105px;
		min-width: 95px;
		margin-right: 50px;
	}
	.header-nav {
		width: 100%;
	}
	nav {
		display: flex;
		flex-direction: row;
		justify-content: end;
		width: 100%;
		height: 32px;
		gap: 2rem;
	}
	h1 {
		font-family: 'Helvetica', sans-serif;
		font-size: 2rem;
		color: white;
		text-align: center;
	}
	a {
		color: white;
		font-size: 1.5rem;
	}
}

</style>
